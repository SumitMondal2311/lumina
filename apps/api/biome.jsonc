{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "extends": "//",
    "files": {
        "ignoreUnknown": true,
        "includes": ["**", ".turbo", "!node_modules", "!dist", "!out", "!build"]
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "linter": {
        "rules": {
            "style": {
                "useImportType": "off"
            }
        }
    }
}
