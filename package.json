{
    "name": "monorepo",
    "private": true,
    "scripts": {
        "apps:build": "turbo build --filter web api worker",
        "build": "turbo build",
        "check-types": "turbo check-types",
        "clean": "rm -rf **/*/dist",
        "dev": "turbo dev",
        "format": "biome format --write .",
        "lint": "turbo lint",
        "lint-staged": "lint-staged",
        "pkgs:build": "turbo build --filter @repo/**",
        "prepare": "husky",
        "sort-pkg-json": "sort-package-json **/package.json --ignore **/node_modules/**/package.json",
        "start": "turbo start"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.14",
        "@types/node": "^25.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "sort-package-json": "^3.6.1",
        "turbo": "^2.8.3",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.28.2",
    "engines": {
        "node": "24.13.0"
    }
}
