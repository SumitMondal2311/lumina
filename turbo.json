{
    "$schema": "https://turborepo.dev/schema.json",
    "ui": "tui",
    "tasks": {
        "dev": {
            "inputs": ["./.env"],
            "dependsOn": ["^dev"],
            "outputs": ["dist/**"]
        },
        "build": {
            "dependsOn": ["^build"],
            "env": ["PORT"],
            "outputs": ["dist/**"]
        },
        "start": {
            "inputs": ["./.env"],
            "dependsOn": ["^start"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        }
    }
}
